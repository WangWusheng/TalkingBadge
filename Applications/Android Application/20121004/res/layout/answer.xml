<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/answertext"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame"
            android:editable="false"
            android:enabled="false"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:lines="1"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/number1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/number1"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/number2"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/number3"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/number4"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/number5"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/number6"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/number7"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/number8"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/number9"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/deletebutton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/delete"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/number0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/number0"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/submitanswerbutton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/answertext"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/submit"
            android:gravity="center_vertical|center_horizontal" />
    </RelativeLayout>

</LinearLayout>